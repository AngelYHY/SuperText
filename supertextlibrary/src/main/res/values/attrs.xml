<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--四周圆角度、左上、右上、左下、右下-->
    <attr name="corner_radius" format="dimension" />
    <attr name="corner_radius_top_left" format="dimension" />
    <attr name="corner_radius_top_right" format="dimension" />
    <attr name="corner_radius_bottom_left" format="dimension" />
    <attr name="corner_radius_bottom_right" format="dimension" />

    <!--虚线边框宽度/间隔-->
    <attr name="border_dash_width" format="dimension" />
    <attr name="border_dash_gap" format="dimension" />

    <!--边框宽度-->
    <attr name="border_width_normal" format="dimension" />

    <!--边框颜色-->
    <attr name="border_color_normal" format="color" />

    <!--背景颜色-->
    <attr name="background_color_normal" format="color" />

    <declare-styleable name="SuperTextView">
        <!--四周圆角度、左上、右上、左下、右下-->
        <attr name="corner_radius" />
        <attr name="corner_radius_top_left" />
        <attr name="corner_radius_top_right" />
        <attr name="corner_radius_bottom_left" />
        <attr name="corner_radius_bottom_right" />

        <!--虚线边框宽度/间隔-->
        <attr name="border_dash_width" />
        <attr name="border_dash_gap" />

        <!--边框宽度-->
        <attr name="border_width_normal" />

        <!--边框颜色-->
        <attr name="border_color_normal" />
        <attr name="border_color_selected" format="color" />

        <!--背景颜色-->
        <attr name="background_color_normal" />
        <attr name="background_color_selected" format="color" />

        <!--文本颜色-->
        <attr name="text_color_normal" format="color" />
        <attr name="text_color_selected" format="color" />
        <attr name="text_selected" format="string" />
        <attr name="text_normal" format="string" />

        <!--图标资源-->
        <attr name="icon_src_normal" format="reference" />
        <attr name="icon_src_selected" format="reference" />

        <!--图标、大小、位置-->
        <attr name="icon_height" format="dimension" />
        <attr name="icon_width" format="dimension" />
        <attr name="icon_direction">
            <enum name="left" value="1" />
            <enum name="top" value="2" />
            <enum name="right" value="3" />
            <enum name="bottom" value="4" />
        </attr>

        <!--字体样式-->
        <attr name="text_typeface" format="string" />

    </declare-styleable>

</resources>